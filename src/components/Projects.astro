---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import UE5 from "./icons/UE5.astro";
import Unity from "./icons/Unity.astro";
import Raylib from "./icons/Raylib.astro";
import JS from "./icons/JS.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  UE5: {
    name: "Unreal Engine 5",
    class: "bg-blue-700 text-white",
    icon: UE5, // Replace with actual icon if available
  },
  CPLUSPLUS: {
    name: "C++",
    class: "bg-green-500 text-white",
    icon: Link, // Replace with actual icon if available
  },
  BLUEPRINT: {
    name: "Blueprint",
    class: "bg-blue-500 text-white",
    icon: Link, // Replace with actual icon if available
  },
  UNITY: {
    name: "Unity",
    class: "bg-gray-800 text-white",
    icon: Unity, // Replace with actual icon if available
  },
  CSHARP: {
    name: "C#",
    class: "bg-purple-500 text-white",
    icon: Link, // Replace with actual icon if available
  },
  HTML5: {
    name: "HTML5",
    class: "bg-orange-500 text-white",
    icon: Link, // Replace with actual icon if available
  },
  CSS3: {
    name: "CSS3",
    class: "bg-blue-300 text-white",
    icon: Link, // Replace with actual icon if available
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-500 text-black",
    icon: JS, // Replace with actual icon if available
  },
  RAYLIB: {
    name: "Raylib",
    class: "bg-red-500 text-white",
    icon: Raylib, // Replace with actual icon if available
  },
};
const PROJECTS = [
  {
    title: "A Twin's Dream",
    description:
      "A cooperative game for two players developed as part of the Ubisoft University Competition 2024. Contributed to 3C programming using C++ and Blueprint on Unreal Engine 5.",
    link: "https://kayhazi.itch.io/a-twins-dream", // Replace with actual link
    github: "https://github.com/pheralb/svgl",
    image: "/projects/A Twins Dream.png",
    tags: [TAGS.UE5, TAGS.CPLUSPLUS, TAGS.BLUEPRINT],
  },
  {
    title: "Resistance of The Forgotten Kingdom",
    description:
      "A 2D survivor-style game developed during the Gamedev.tv 2024 game jam using Unity C#.",
    link: "https://github.com/your-repository-link", // Replace with actual link
    github: "https://github.com/pheralb/svgl",
    image: "/projects/ROTFK.png",
    tags: [TAGS.UNITY, TAGS.CSHARP],
  },
  {
    title: "Definitely not Space Invaders",
    description:
      "A clone of the game 'Space Invaders' developed for a web development course using HTML5, CSS3, and JavaScript.",
    link: "https://github.com/your-repository-link", // Replace with actual link
    github: "https://github.com/pheralb/svgl",
    image: "/projects/SpaceInvaders.png",
    tags: [TAGS.HTML5, TAGS.CSS3, TAGS.JAVASCRIPT],
  },
  {
    title: "Definitely not Pong",
    description:
      "Developed a Pong game in C++ with adaptive AI, dynamic visuals, and integrated audio feedback, demonstrating proficiency in game mechanics and programming.",
    link: "https://github.com/your-repository-link", // Replace with actual link
    github: "https://github.com/pheralb/svgl",
    image: "/projects/PONG.png",
    tags: [TAGS.CPLUSPLUS, TAGS.RAYLIB],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
